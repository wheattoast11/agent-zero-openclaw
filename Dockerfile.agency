FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --production

# Copy built artifacts
COPY dist/ ./dist/
COPY bin/ ./bin/

# Create data directory for vault + logs + queue + wa-auth
RUN mkdir -p /data/.agent-zero/logs /data/.agent-zero/moltbook-queue /data/.agent-zero/wa-auth

# Link home to data volume so vault persists
ENV HOME=/data

CMD ["node", "bin/agent-zero.js", "agency"]
